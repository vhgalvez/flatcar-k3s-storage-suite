apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: ingressroute-longhorn-internal
  namespace: {{ namespace }}
  labels:
    app.kubernetes.io/name: longhorn
    app.kubernetes.io/component: ingress
    access: internal
    environment: prod
  annotations:
    maintained-by: devops@socialdevs.site
    created-by: ansible
spec:
  entryPoints:
    - websecure
  routes:
    - match: "Host(`{{ domain }}`) && (PathPrefix(`/dashboard`) || PathPrefix(`/api`))"
      kind: Rule
      middlewares:
        - name: {{ middleware_name }}
          namespace: {{ namespace }}
      services:
        - name: longhorn-frontend
          port: 80
  tls:
    secretName: longhorn-tls-secret